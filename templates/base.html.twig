<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>{% block title %}nouveau monde{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="/style.css">
        {% endblock %}
        {% block head_css %}
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
            <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        {% endblock %}
    </head>
    <body class="dark">
        {% block header %}
            <div class="container mt-3 mt-md-5">
                <div class="row align-items-center">
                    <div class="text-center text-sm-left col-sm-auto mr-sm-auto">
                        <a class="reset" href="{{ path('home') }}"><h5><b><i>nouveau monde</i></b></h5></a>
                    </div>
                    {% if app.user %}
                        <div class="d-block d-sm-none logout">
                            <a class="btn red" href="{{ path('app_logout') }}"><i class="material-icons">exit_to_app</i></a>
                        </div>
                        <div class="d-none d-sm-block text-center text-sm-left mt-3 mt-sm-0 col-sm-auto col-auto pr-sm-0">
                            <a class="btn red" href="{{ path('app_logout') }}">Se d√©connecter</a>
                        </div>
                    {% else %}
                        <div class="text-center text-sm-left col-6 mt-3 mt-sm-0 col-sm-auto ml-sm-auto">
                            <a href="{{ path('app_login') }}">Se connecter</a>
                        </div>
                        <div class="text-center text-sm-left col-6 mt-3 mt-sm-0 col-sm-auto pr-0">
                            <a href="{{ path('app_register') }}">S'inscrire</a>
                        </div>
                    {% endif %}
                </div>
            </div>
        {% endblock %}
        {% block body %}{% endblock %}
        {% block javascripts %}
            <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
            <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>
